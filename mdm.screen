#!/bin/bash

TMPFILE=`mktemp -d -t mdm-XXXXXXXXXX` || exit 1
cat <<EOF >> "$TMPFILE/screenrc"
screen mdm-slave "$TMPFILE"
screen mdm-slave "$TMPFILE"
screen mdm-slave "$TMPFILE"
screen mdm-slave "$TMPFILE"
screen mdm-slave "$TMPFILE"
select 0
EOF
mdm-master "$TMPFILE" "$@"
screen -c "$TMPFILE/screenrc"
rm -Rf "$TMPFILE"
